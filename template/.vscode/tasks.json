{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ios-build",
            "command": "./script/build-ios.sh",
            "type": "shell",
            "args": [
                "-t",
                "${input:DeveloperID}",
                "-r",
                "gles"
            ],
            "problemMatcher": []
        },
        {
            "label": "ios-deploy",
            "command": "./script/build-ios.sh",
            "type": "shell",
            "args": [
                "-d",
                "launch",
                "-t",
                "${input:DeveloperID}",
                "-r",
                "gles"
            ],
            "problemMatcher": []
        },
        {
            "label": "ios-build-metal",
            "command": "./script/build-ios.sh",
            "type": "shell",
            "args": [
                "-t",
                "${input:DeveloperID}",
                "-r",
                "metal"
            ],
            "problemMatcher": []
        },
        {
            "label": "ios-deploy-metal",
            "command": "./script/build-ios.sh",
            "type": "shell",
            "args": [
                "-d",
                "launch",
                "-t",
                "${input:DeveloperID}",
                "-r",
                "metal"
            ],
            "problemMatcher": []
        },
        {
            "label": "android-build-debug",
            "command": "./script/build-android-debug.sh",
            "windows":{
                "command": "call \"tools/bash/git-bash.exe\" script/build-android-debug.sh"
            },
            "type": "shell",
            "problemMatcher": []
        },
        {
            "label": "android-build-release",
            "command": "./script/build-android-release.sh",
            "windows":{
                "command": "call \"tools/bash/git-bash.exe\" script/build-android-release.sh"
            },
            "type": "shell",
            "problemMatcher": []
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/${workspaceFolderBasename}.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/${workspaceFolderBasename}.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/${workspaceFolderBasename}.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "DeveloperID",
            "description": "iOS developer team id",
            "default": " "
        }
    ]
}